{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "firewalllocation": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure datacentre Location to deploy the Firewall and IP Address"
            }
        },
        "publicIpAddressName": {
            "type": "string",
            "defaultValue": "adbFWIP",
            "metadata": {
                "description": "Name of the IP Address"
            }
        },
        "firewallName": {
            "type": "string",
            "defaultValue": "adbHubFW",
            "metadata": {
                "description": "Name of the Azure Firewall"
            }
        },
        "firewallSKU": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "Firewall SKU"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the vnet associated witht he Firewall"
            }
        },
        "firewallWebappDestinationAddresses": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description":"List of destination IP addresses. Supports IP ranges, prefixes, and service tags"
            }
        },
        "logBlobstorageDomains": {
            "type": "array",
            "defaultValue": [],
             "metadata": {
                "description": "List of Log Blob storage domain name"
            }
        },
        "eventHubEndpointDomains": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "List of Event Hub endpoint domain name"
            }
        },
        "metastoreDomains": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "List of Metastore domain name"
            }
        },
        "artifactBlobStoragePrimaryDomains": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "List of Artifact Blob storage primary domain name"
            }
        },
        "dbfsBlobStrageDomain": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "the domain name of DBFS root Blob storage"
            }
        },
        "sourceAddresses": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "List of source IP addresses. Should be same as public/private spoke vnet ip address"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/publicIpAddresses",
            "name": "[parameters('publicIpAddressName')]",
            "location": "[parameters('firewalllocation')]",
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "tags": {}
        },
        {
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/azureFirewalls",
            "name": "[parameters('firewallName')]",
            "location": "[parameters('firewalllocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[parameters('publicIpAddressName')]",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'AzureFirewallSubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "sku": {
                    "tier": "[parameters('firewallSKU')]"
                },
                "threatIntelMode": "Alert",
                "additionalProperties": {
                    "Network.DNS.EnableProxy": "true"
                },
                "networkRuleCollections": [
                    {
                        "name": "ADBControlplane",
                        "properties": {
                            "priority": 200,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "Webapp ",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "destinationAddresses": "[parameters('firewallWebappDestinationAddresses')]",
                                    "sourceIpGroups": [],
                                    "destinationIpGroups": [],
                                    "destinationFqdns": [],
                                    "destinationPorts": [
                                        "443"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "databricks-control-plane-services",
                        "properties": {
                            "priority": 200,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "databricks-logblobstorage",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": "[parameters('logBlobstorageDomains')]",
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "databricks-eventhub-endpoint",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": "[parameters('eventHubEndpointDomains')]",
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "databricks-metastore",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": "[parameters('metastoreDomains')]",
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "databricks-artifactblobstorage",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": "[parameters('artifactBlobStoragePrimaryDomains')]",
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "Public Repositories for Python and R Libraries",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "*pypi.org",
                                        "*pythonhosted.org",
                                        "cran.r-project.org"
                                    ],
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "Used by Ganglia UI",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "cdnjs.com"
                                    ],
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "databricks-dbfs",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": "[parameters('dbfsBlobStrageDomain')]",
                                    "sourceAddresses": "[parameters('sourceAddresses')]",
                                    "sourceIpGroups": []
                                }
                            ]
                        }
                    }
                ]
            },
            "tags": {}
        }
    ]
}