{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "sku": {
            "type": "string"
        },
        "enabledForDeployment": {
            "type": "bool"
        },
        "enabledForTemplateDeployment": {
            "type": "bool"
        },
        "enabledForDiskEncryption": {
            "type": "bool"
        },
        "enableRbacAuthorization": {
            "type": "bool"
        },
        "enableSoftDelete": {
            "type": "bool"
        },
        "servicePrincipalId": {
            "type": "string"
        },
        "softDeleteRetentionInDays": {
            "type": "int"
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]",
            "metadata": {
              "description": "Specifies the Azure Active Directory tenant ID that should be used for authenticating requests to the key vault. Get it by using Get-AzSubscription cmdlet."
            }
        },
        "logAnalyticsName": {
            "type": "string"
        },
        "diagnosticSettingName": {
            "type": "string"
        },
        "servicePrincipalObjectId": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2019-09-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.KeyVault/vaults",
            "properties": {
                "enabledForDeployment": "[parameters('enabledForDeployment')]",
                "enabledForTemplateDeployment": "[parameters('enabledForTemplateDeployment')]",
                "enabledForDiskEncryption": "[parameters('enabledForDiskEncryption')]",
                "enableRbacAuthorization": "[parameters('enableRbacAuthorization')]",
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "[parameters('sku')]",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                      "objectID": "[parameters('servicePrincipalObjectId')]",
                      "tenantId": "[subscription().tenantId]",
                      "permissions": {
                        "secrets": [
                            "get",
                            "list",
                            "set"
                        ]
                      }
                    }
                  ],
                "enableSoftDelete": "[parameters('enableSoftDelete')]",
                "softDeleteRetentionInDays": "[parameters('softDeleteRetentionInDays')]"
            },
            "resources": [
                {
                "type": "Microsoft.KeyVault/vaults/providers/diagnosticsettings",
                "apiVersion": "2017-05-01-preview",
                "name": "[concat(parameters('keyVaultName'), '/Microsoft.Insights/', parameters('diagnosticSettingName'))]",
                "location": "[parameters('location')]",
                "dependsOn": [
                    "[parameters('keyVaultName')]"
                ],
                "properties": {
                    "workspaceId": "[concat(resourceGroup().id, '/providers/Microsoft.OperationalInsights/workspaces/', parameters('logAnalyticsName'))]",
                    "logs": [
                    {
                        "category": "AuditEvent",
                        "enabled": true
                    }
                    ],
                    "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true
                    }
                    ]
                }
                }
            ]
        }
    ],
    "outputs": {}
}
