{
	"name": "IngestToBronze",
	"properties": {
		"activities": [
			{
				"name": "Anonymize Source",
				"description": "Anonymize description column with Presidio",
				"type": "DatabricksNotebook",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/notebooks/01_transform_presidio",
					"baseParameters": {
						"anonymized_column": "rd_seg_dsc",
						"storage_output_folder": "anonymized",
						"input_file_path": {
							"value": "@pipeline().parameters.fileName",
							"type": "Expression"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "PresidioDatabricks",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Copy from Anonymized to Bronze",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Anonymize Source",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": "anonymized",
							"wildcardFileName": "part-*",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ParkingSensors_Anonymized_CSV",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ParkingSensors_Bronze_CSV",
						"type": "DatasetReference",
						"parameters": {
							"fileName": {
								"value": "@pipeline().parameters.fileName",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Delete Anonymized",
				"type": "Delete",
				"dependsOn": [
					{
						"activity": "Copy from Anonymized to Bronze",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ParkingSensors_Anonymized_CSV",
						"type": "DatasetReference"
					},
					"enableLogging": false,
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"enablePartitionDiscovery": false
					}
				}
			}
		],
		"parameters": {
			"fileName": {
				"type": "string"
			}
		},
		"folder": {
			"name": "ParkingSensors"
		},
		"annotations": []
	}
}